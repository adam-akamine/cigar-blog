doctype html
html(lang='en')
  head
    meta(charset='UTF-8', ,='', name='viewport', content='width=device-width, initial-scale=1')
    title New Review
    // Bootstrap CDN
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/non-index.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto|PT+Serif', rel='stylesheet')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            .sr-only Toggle navigation
            .icon-bar
            .icon-bar
            .icon-bar
          a.navbar-brand(href='#')
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href="/reviews") REVIEWS
            li
              a(href='/contact') CONTACT
    .mainContainer
      .addContainer
        .addTitle
          h1 Add a Review
        .formContainer
          form(action="/reviews", method="POST", id="addReviewForm")
            .form-group
              label Cigar Name
              input.form-control(type="text", name="cigarName")
            .form-group
              label Author
              input.form-control(type="text", name="cigarReviewAuthor")
            .form-group
              label Brand
              input.form-control(type="text", name="cigarBrand")
            .form-group
              label Size
              input.form-control(type="text", name="cigarSize")
            .form-group
              label Shape
              input.form-control(type="text", name="cigarShape")
            .form-group
              label Price at time of review
              input.form-control(type="text", name="cigarPrice")
            .form-group
              label Flavors
              input.form-control(type="text", name="cigarFlavors")
            .form-group
              label Smoke Time
              input.form-control(type="text", name="cigarSmokeTime")
            .form-group
              label Grade
              input.form-control(type="text", name="cigarGrade")
            .form-group
              label Review Date
              input.form-control(type="date", name="cigarReviewDate")
            .form-group
              label Review Text
              textarea.form-control(rows="10", type="text", name="cigarReviewText")
