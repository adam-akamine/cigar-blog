doctype html
html(lang='en')
  head
    meta(charset='UTF-8', ,='', name='viewport', content='width=device-width, initial-scale=1')
    title New Review
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/non-index.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto|PT+Serif', rel='stylesheet')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            .sr-only Toggle navigation
            .icon-bar
            .icon-bar
            .icon-bar
          a.navbar-brand(href='#')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href="/reviews") REVIEWS
    .mainContainer
      .addContainer
        .addTitle
          h1 Add a Review
        .formContainer
          form(action="/reviews", method="POST", id="addReviewForm", enctype="multipart/form-data")
            .form-group
              label Cigar Name
              input.form-control(type="text", name="cigarName")
            .form-group
              label Author
              input.form-control(type="text", name="author")
            .form-group
              label Brand
              input.form-control(type="text", name="brand")
            .form-group
              label Size
              input.form-control(type="text", name="size")
            .form-group
              label Shape
              input.form-control(type="text", name="shape")
            .form-group
              label Price at time of review
              input.form-control(type="text", name="price")
            .form-group
              label Flavors
              input.form-control(type="text", name="flavors")
            .form-group
              label Smoke Time
              input.form-control(type="text", name="smokeTime")
            .form-group
              label Grade
              input.form-control(type="text", name="grade")
            .form-group
              label Review Date
              input.form-control(type="date", name="reviewDate")
            .form-group
              label Review Text
              textarea.form-control(rows="10", type="text", name="reviewText")
            .form-group
              label.btn.btn-default.btn-file(for='pic')
              | Upload photo
              input#pic(style="display:none", type='file', name='pic', onchange='previewFile()')
              img#upload-file-info.label.label-info(style="display:none")
            button.btn.btn-primary(type="submit", value="Submit") Submit

      .footer
        | A cigar blog by Adam Akamine. Â© 2016. All Rights Reserved.
    script.
      function previewFile() {
        console.log("Adding pic");
        var preview = document.getElementById("upload-file-info");
        var file = document.querySelector('input[type=file]').files[0];
        var reader  = new FileReader();
        reader.addEventListener("load", function () {
        preview.src = reader.result;
        preview.setAttribute("style", "");
        }, false);
        if (file) {
        reader.readAsDataURL(file);
        }
      }
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
