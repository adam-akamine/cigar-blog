doctype html
html(lang='en')
  head
    meta(charset='UTF-8', ,='', name='viewport', content='width=device-width, initial-scale=1')
    title Reviews
    //- Bootstrap CDN
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/non-index.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto|PT+Serif', rel='stylesheet')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') HOME
            li
              a(href='/about') ABOUT
            li
              a(href="/reviews") REVIEWS
    .reviewContainer
      .welcomeMessageContainer
        .welcomeMessage
          h1 Reviews
        each val, index in json
          if index===5
            .review.col-md-5.lastItem
              a(href="/reviews/" + (val.id))
                h3.reviewTitle #{val.cigarName}
              h5.reviewTitle #{val.title}
              h5 #{val.reviewDate}
              a(href='/reviews/' + val.id)
                img.cigarThumbnail(src=val.pic.dataValues.filename)
          else
            .review.col-md-5
              a(href="/reviews/" + (val.id))
                h3 #{val.cigarName}
              h5.reviewTitle #{val.title}
              h5 #{val.reviewDate}
              a(href='/reviews/' + val.id)
                img.cigarThumbnail(src=val.pic.dataValues.filename)
    .reviewListFooter
      - var n = 1;
      .pagContainer.text-center
        ul.pagination
          while n < totalPages + 1
            if n===currPage
              li.active
                a(href='/reviews/page/' + (n - 1))= n++
            else
              li
                a(href='/reviews/page/' + (n - 1))= n++
      a(href='/reviews/all') Show All Reviews
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
