doctype html
html(lang='en')
  head
    meta(charset='UTF-8', ,='', name='viewport', content='width=device-width, initial-scale=1')
    title Reviews
    // Bootstrap CDN
    link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/css/non-index.css')
    link(href='https://fonts.googleapis.com/css?family=Roboto|PT+Serif', rel='stylesheet')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#')
        // Collect the nav links, forms, and other content for toggling
        #bs-example-navbar-collapse-1.collapse.navbar-collapse
          ul.nav.navbar-nav
            li
              a(href='/') HOME
            li
              a(href="/reviews") REVIEWS
    .mainContainer
      .welcomeMessageContainer
        .welcomeMessage
          h1 Reviews
        each val in json
          .review.col-md-5
            a(href="/reviews/" + (val.id))
              h2.reviewTitle #{val.cigarName}
            h3 by #{val.author}
            h4 #{val.reviewDate}
            h5 Shape: #{val.shape} Size: #{val.size}
      .footer
        | A cigar blog by Adam Akamine. Â© 2016. All Rights Reserved.
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
